%h2 {{pageTitle}}

.notice

%section#upper-bar
  %ng-switch{ "on"=>"!single_post" }
    .people-filters{ "ng-switch-when" => "true", "ng-include"=>"'#{asset_path('post_filters.html')}'" }
  .clear-left

%div{ "ng-repeat"=>"post in posts", "ng-include"=>"'#{asset_path('post.html')}'" }

.content-block{ "ng-show"=>"(posts | filterDeleted).length == 0" }
  %p No matching posts were found.

%pagination{ "total-pages"=>"totalPages", "current-page"=>"currentPage" }