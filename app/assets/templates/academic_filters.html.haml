%div{ "ng-controller"=>"AcademicFiltersCtrl" }
  %p.label Find records

  .click-menu
    %p.title
      %a{ href: "" } {{selected.student.short_name || 'Student'}}

    .container
      %filtered-list{ "list"=>"students", "show-property"=>"short_name", "always-shown"=>'true', "on-select"=>"selected.student = value; hideMenus()" }

  .click-menu
    %p.title
      %a{ href: "" } {{selected.subject.name || 'Subject'}}

    .container
      %filtered-list{ "list"=>"subjects", "show-property"=>"name", "always-shown"=>'true', "on-select"=>"selected.subject = value; hideMenus()" }

  %a.manage{ href: "/academics/subjects" } Manage subjects