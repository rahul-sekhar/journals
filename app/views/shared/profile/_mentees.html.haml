%h4 Mentees
%ul
  - if teacher.mentees.present?
    - teacher.mentees.alphabetical.each do |mentee|
      %li
        = mentee.full_name
        - if can? :administrate, teacher
          = link_to "Remove", remove_mentee_from_teacher_path(teacher, student_id: mentee.id), method: :post
  - else
    %li None

- if (can? :administrate, teacher) && (teacher.remaining_students.present?)
  = form_tag add_mentee_to_teacher_path(teacher), method: :post do
    = label_tag :student_id, 'Remaining students'
    = select_tag :student_id, options_from_collection_for_select(teacher.remaining_students.alphabetical, :id, :full_name)
    = submit_tag "Add mentee"