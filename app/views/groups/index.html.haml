- page_id 'manage_groups'
- title 'Manage groups'

- if @groups.present?
  %ul.groups
    - @groups.each do |group|
      %li
        = link_to group.name, group
        = link_to "Delete", 
          group, 
          method: :delete, 
          confirm: "Are you sure you want to delete this group?",
          class: "delete-link"
        = link_to "Rename", edit_group_path(group), class: "edit-link"
      %li.clear-left

- else
  .content-block
    %p There are no groups yet.
  