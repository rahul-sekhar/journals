!!! 5
%html
  %head
    %title= page_title
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body{id: content_for(:page_id)}
    %header
      %h1 Journals Demo

    - if flash[:alert]
      %p= flash[:alert]

    - if flash[:notice]
      %p= flash[:notice]

    - if logged_in?
      %p You are signed in as #{current_profile.full_name}
      %ul
        %li= link_to "Logout", logout_path

    %navigation
      %ul
        %li= link_to "View posts", posts_path
        %li= link_to "New post", new_post_path

    = yield