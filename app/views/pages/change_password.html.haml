- page_id 'change_password'
- title 'Change password'

= semantic_form_for @current_user, url: change_password_path do |form|
  = form.inputs do
    = form.input :current_password
    = form.input :new_password
  = form.actions do
    = form.action :submit, label: "Change", button_html: { class: :button }
